<config>
	<modules>
		<Symmetrics_DeliveryTime>
			<version>0.1.5</version>
		</Symmetrics_DeliveryTime>
	</modules>
	<global>
        <resources>
            <deliverytime_setup>
                <setup>
                    <module>Symmetrics_DeliveryTime</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </deliverytime_setup>
            <catalog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </catalog_write>
            <catalog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </catalog_read>
        </resources>
		<blocks>
			<adminhtml>
				<rewrite>
					<catalog_product_grid>Symmetrics_DeliveryTime_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
				</rewrite>
			</adminhtml>
		</blocks>
        <helpers>
            <deliverytime>
                <class>Symmetrics_DeliveryTime_Helper</class>
            </deliverytime>
        </helpers>
	</global>
    <frontend>
        <translate>
            <modules>
                <Symmetrics_DeliveryTime>
                    <files>
                        <default>Symmetrics_DeliveryTime.csv</default>
                    </files>
                </Symmetrics_DeliveryTime>
            </modules>
        </translate>
    </frontend>
</config>
